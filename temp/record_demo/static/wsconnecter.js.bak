function WebSocketConnectMethod( config ) { //定义socket连接方法类


	var speechSokt;
	var connKeeperID;

	var msgHandle = config.msgHandle;
	var stateHandle = config.stateHandle;

	this.wsStart = function () {
		var Uri = document.getElementById('wssip').value; //"wss://111.205.137.58:5821/wss/" //设置wss asr online接口地址 如 wss://X.X.X.X:port/wss/
		if(Uri.match(/wss:\S*|ws:\S*/))
		{
			console.log("Uri"+Uri);
		}
		else
		{
			alert("请检查wss地址正确性");
			return 0;
		}

		if ( 'WebSocket' in window ) {
			speechSokt = new WebSocket( Uri ); // 定义socket连接对象
			speechSokt.onopen = function(e){onOpen(e);}; // 定义响应函数
			speechSokt.onclose = function(e){
			    console.log("onclose ws!");
			    //speechSokt.close();
				onClose(e);
				};
			speechSokt.onmessage = function(e){onMessage(e);};
			speechSokt.onerror = function(e){onError(e);};
			return 1;
		}
		else {
			alert('当前浏览器不支持 WebSocket');
			return 0;
		}
	};

	// 定义停止与发送函数
	this.wsStop = function () {
		if(speechSokt != undefined) {
			console.log("stop ws!");
			speechSokt.close();
		}
	};

	this.wsSend = function ( oneData ) {

		if(speechSokt == undefined) return;
		if ( speechSokt.readyState === 1 ) { // 0:CONNECTING, 1:OPEN, 2:CLOSING, 3:CLOSED

			speechSokt.send( oneData );


		}
	};

	// SOCEKT连接中的消息与状态响应
	function onOpen( e ) {
		// --- START: 获取选择的降噪模式 ---
		var selectedDenoiserRadio = document.querySelector('input[name="denoiser_mode"]:checked');
		var denoiserValue = selectedDenoiserRadio ? selectedDenoiserRadio.value : 'none'; // 获取选中的值，若无选中则默认为 'none'
		var denoiserBool = denoiserValue === 'True'; 
		// --- END: 获取选择的降噪模式 ---

		// --- START: 获取保存文件路径 ---
		//var Input_conversationId = get_conversationId();
	
		// --- END: 获取保存文件路径 ---
		// 发送json
		var chunk_size = new Array( 5, 10, 5 );
		if(get_conversationId() != ""){
		var request = {
			"chunk_size": chunk_size,
			"wav_name":  "h5",
			"is_speaking":  true,
			"chunk_interval":10,
			"mode":getAsrMode(), // 假设 getAsrMode() 在其他地方定义
			"language_id": getLanguage(), // 假设 getLanguage() 在其他地方定义
			"max_end_silence_time": 500,
			// --- START: 使用获取到的降噪模式值 ---
			"is_denoiser": denoiserBool, // 修正了原来的语法错误，并使用了变量
			"conversationId": get_conversationId()
			// --- END: 使用获取到的降噪模式值 ---
		};}
		else{
		var request = {
			"chunk_size": chunk_size,
			"wav_name":  "h5",
			"is_speaking":  true,
			"chunk_interval":10,
			"mode":getAsrMode(), // 假设 getAsrMode() 在其他地方定义
			"language_id": "ZH", // 假设 getLanguage() 在其他地方定义
			// "max_end_silence_time": 500,
			// --- START: 使用获取到的降噪模式值 ---
			"is_denoiser": denoiserBool, // 修正了原来的语法错误，并使用了变量
			// --- END: 使用获取到的降噪模式值 ---
			"originalCode": "ZH",
			"targetLanguage": "EN",
			"openTranslate":true,
			"openTts":true,
			"timbre":"1",
			"conversationId": "1111",
			"is_use_timestamp_model":false,
	        "stopInterval": "1500"
		};
		}

		// 假设 isfilemode, file_ext, file_sample_rate 在其他地方定义
		if(isfilemode)
		{
			request.wav_format=file_ext;
			if(file_ext=="wav")
			{
				request.wav_format="PCM";
				request.audio_fs=file_sample_rate;
			}
		}
		// 假设 getHotwords() 在其他地方定义
		var hotwords=getHotwords();
		if(hotwords.length>0)
		{
			request.hotwords=hotwords;
		}

		console.log("Sending initial request:", request); // 打印将要发送的完整请求
		speechSokt.send( JSON.stringify(request) );
		console.log("连接成功");
		stateHandle(0);

	}

	function onClose( e ) {
		stateHandle(1);
	}

	function onMessage( e ) {

		msgHandle( e );
	}

	function onError( e ) {

		info_div.innerHTML="连接"+e;
		console.log(e);
		stateHandle(2);

	}


}